#!/usr/bin/env ruby

$:.unshift(File.dirname(__FILE__) + '/../lib/')

require 'gvn'
require 'fileutils'
#
# ~/.gvnrc
#
# repository: /repos/product_hoge
# path:       [module_A, module_B]
# ignore:     [.*\.(dll|exe|zip)]
#

unless Dir.exists?(File.expand_path('~/.gvn'))
  FileUtils.mkdir_p(File.expand_path('~/.gvn') + '/stage')
end

Gvn::Command.start
